{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
}
