{
  "compilerOptions": {
    "rootDir": "./src",
    "outFile": "./dist/index.d.ts",
    "declaration": true,
    "module": "AMD",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "emitDeclarationOnly": true,
    "strict": true
  },
  "include": ["./src/**/*"]
}
